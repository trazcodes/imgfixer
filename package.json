{
  "name": "imgfixer",
  "version": "1.0.0",
  "description": "Image processing application with OCR, resizing, and format conversion capabilities",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "cd client && npm install",
    "install-server": "npm install",
    "install-all": "npm run install-server && npm run install-client",
    "build": "cd client && npm run build"
  },
  "keywords": [
    "image",
    "processing",
    "OCR",
    "resize",
    "convert"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "docx": "^8.5.0",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "gridfs-stream": "^1.1.1",
    "jimp": "^0.22.10",
    "mongodb": "^6.14.2",
    "mongoose": "^8.12.1",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.14.0",
    "sharp": "^0.33.2",
    "tesseract.js": "^5.0.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3"
  }
}
